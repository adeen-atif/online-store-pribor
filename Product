package Project;
public class Product {
    String name, variant, category, color, description;
    int serNum, price, stock;
    public Product(String name, String variant, String category, String color, int serNum, int price, int stock, String description) { //Midnight Blue - Kazo - Wallet - Blue - 750 - 10 - Genuine leather big wallets
        this.name = name;
        this.variant = variant;
        this.category = category;
        this.color = color;
        this.serNum = serNum;
        this.price = price;
        this.stock = stock;
        this.description = description;
    }

    public String toString() {
        return "Name: " + this.name + " || " + "Variant: " + this.variant + " || " + "Cateogory: " + this.category + " " +"Color: " + this.color + " || " +"serial No: " + this.serNum + " || " +"price: " + this.price + " || " +"stock: " + this.stock + " || " +"description: " + this.description;
    }
}
